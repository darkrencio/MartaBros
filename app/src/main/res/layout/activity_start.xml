<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center" android:background="@drawable/ies_start">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catch the Ball"
            android:textSize="32sp" android:textColor="@android:color/background_light"/>

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

        <TableRow
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/examen"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 point"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"/>
        </TableRow>

        <TableRow
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/android_studio"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 point"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"/>
        </TableRow>

        <TableRow
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/isvy_face"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game Over"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"/>
        </TableRow>

    </TableLayout>


    <ImageView
            android:id="@+id/btn_start"
            android:layout_width="96dp"
            android:layout_height="71dp"
            android:layout_marginTop="60dp"
            android:onClick="startGame"
            android:src="@drawable/start"/>


</LinearLayout>